      { variant: 'primary', target: '_blank', text: 'Donate through email', href: 'mailto:finance@prismsus.org' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1729459370346-e9885cb35954?q=80&w=2670&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
